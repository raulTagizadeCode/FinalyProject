@{
    ViewData["Title"] = "Ödəniş Uğursuz";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ödəniş Uğursuz</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .progress-bar {
            height: 5px;
            background-color: #E53E3E;
            width: 0;
            animation: loadProgress 1.5s ease-out forwards;
        }

        keyframes loadProgress {
            from

        {
            width: 0;
        }

        to {
            width: 100%;
        }

        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">

    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md text-center">
        <div class="progress-bar"></div>

        <div class="mt-6 flex justify-center">
            <svg class="w-16 h-16 text-red-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </div>

        <h2 class="text-xl font-semibold mt-4 text-gray-800">Ödəniş Uğursuz Oldu!</h2>
        <p class="text-gray-600 mt-2">Sizin ödənişiniz alınmadı. Xahiş edirik, yenidən cəhd edin.</p>

        <div class="mt-4 bg-gray-100 p-4 rounded-lg text-left text-gray-700">
            <p><strong>Ödəniş Metodu:</strong> Kredit Kartı</p>
        </div>

        <div class="mt-6 flex flex-col gap-3">
            <a href="/Cart/Checkout" class="bg-red-600 text-white py-2 rounded-md shadow hover:bg-red-700 transition">Yenidən cəhd et</a>
            <a href="/" class="bg-gray-200 text-gray-800 py-2 rounded-md shadow hover:bg-gray-300 transition">Ana səhifəyə qayıt</a>
        </div>
    </div>

</body>
</html>
