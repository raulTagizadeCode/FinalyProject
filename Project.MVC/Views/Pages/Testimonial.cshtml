@using Project.BL.DTOs.RaytingDTOs
@model ICollection<GetRaytingDto>

<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Testimonial</h5>
            <h1 class="mb-5">Our Clients Say!!!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var item in Model.DistinctBy(x => x.Comment)) // Comment eyni olanları çıxarır
            {
                <div class="testimonial-item bg-transparent border rounded p-4">
                    <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                    <p>@item.Comment</p>
                    <div class="d-flex align-items-center">
                        <img class="img-fluid flex-shrink-0 rounded-circle" src="~/img/profilsekili.png" style="width: 50px; height: 50px;">
                        <div class="ps-3">
                            <small>@item.AppUserName @item.AppUserSurname</small>
                            <div class="stars mt-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.Score)
                                    {
                                        <i class="fas fa-star text-warning"></i> <!-- Tam dolu ulduz -->
                                    }
                                    else if (i - 0.5 == item.Score)
                                    {
                                        <i class="fas fa-star-half-alt text-warning"></i> <!-- Yarım ulduz -->
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-warning"></i> <!-- Boş ulduz -->
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial End -->
<!-- Font Awesome əlavə et -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">