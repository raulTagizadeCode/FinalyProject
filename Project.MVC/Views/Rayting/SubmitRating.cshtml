﻿@using Project.DAL.Models
@model Rayting
<h3>Restoran üçün Reyting Verin</h3>

<form asp-controller="Rayting" asp-action="SubmitRating" method="post">
    <div class="mb-3">
        <label class="form-label">Reyting (1-5)</label>
        <select class="form-select" asp-for="Score" required>
            <option value="1">1 - Çox zəif</option>
            <option value="2">2 - Zəif</option>
            <option value="3">3 - Orta</option>
            <option value="4">4 - Yaxşı</option>
            <option value="5">5 - Əla</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Şərhiniz (istəyə bağlı)</label>
        <textarea class="form-control" asp-for="Comment"></textarea>
    </div>
    <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}