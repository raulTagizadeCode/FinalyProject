@using Project.BL.DTOs.FoodDTOs
@model GetFoodDto

<!-- Product Details Area -->
<section class="product__details-area py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="product__details-images position-relative">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="itemOne-tab-pane" role="tabpanel">
                            <a href="~/uploads/foods/@Model.ImageUrl" class="popup-image d-block">
                                <img src="~/uploads/foods/@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details-content p-4 bg-white rounded shadow-sm">
                    <span class="tag badge bg-primary text-white px-3 py-2 mb-3">@Model.CategoryName</span>
                    <h2 class="title mb-3">@Model.Name</h2>
                    <h4 class="price text-success fw-bold mb-4">@Model.Price AZN</h4>
                    <p class="text-muted mb-4">@Model.Description</p>
                    <div class="product__details-qty mt-3 d-flex gap-4">
                        <a asp-controller="Cart" asp-action="AddToBasket" asp-route-productId="@Model.Id">
                        <button>Add To Cart</button>
                        </a>
                        <button class="btn btn-primary px-4 py-2 fw-bold shadow-sm" style="font-size: 16px; width: 200px;">Buy it Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Area End -->
